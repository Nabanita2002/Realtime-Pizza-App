<section class="status hero ">

    <div class="container mx-auto">
        <div class="w-2/3 mx-auto status-box">

            <div class="flex  items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track delivery status</h1>
                <h6 class="bg-white py1-1 rounded-full px-4 text-green-600 text-xs"><%=order._id%></h6>

                <input id="hiddenInput" type="hidden" value="<%=JSON.stringify(order)%>">
            </div>

            <ul>
                <li class="status-line text-xl pb-14 " data-status="order_placed"><span>Order placed</span>

                </li>
                <li class="status-line text-xl pb-14 "data-status="confirmed"><span>Order confirmation</span>

                </li>
                <li class="status-line text-xl pb-14 " data-status="prepared"><span>Order preparation</span>

                </li>
                <li class="status-line text-xl pb-14 data-status=" delivered"><span>Out for delivery</span>

                </li>
               
                <li class="status-line text-xl" data-status="completed"><span>Order completed</span>

                </li>
            </ul>
        </div>
    </div>

</section>